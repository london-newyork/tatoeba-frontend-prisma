{
  "compilerOptions": {
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "esnext",
    "target": "es6",
    "jsx": "preserve",
    "lib": [
      "dom",
      "dom.iterable",
      "es6"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "incremental": true,
    "outDir": "dist",
    "baseUrl": "./",
    "paths": {
      "@Commons/*": [
        "./src/commons/*",
      ],
      "@Components/*": [
        "./src/commons/components/*"
      ],
      "@Pages/*": [
        "./src/pages/*"
      ],
      "@Features/*": [
        "./src/features/*"
      ],
      "@Types/*": [
        "./src/types/*"
      ],
      "@Lib/*": [
        "./src/lib/*"
      ],
      "@Layouts/*": [
        "./src/layouts/*"
      ],
      "@Utils/*": [
        "./src/utils/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "src/pages/TestParent.tsx",
    "src/pages/Top",
    "src/pages/**/*",
    "src/components/**/*",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}